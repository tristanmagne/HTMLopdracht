  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Launch server",
      "type": "pwa-node",
      "program": "${workspaceFolder}/server.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "deno",
      "runtimeArgs": [
        "run",
        "--inspect",
        "--allow-read",
        "--allow-net",
        "--import-map=import_map.json"
      ],
      "attachSimplePort": 9229
    }
  ]
}